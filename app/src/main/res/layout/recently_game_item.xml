<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:background="@drawable/backg_selector"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorgray"
        android:layout_alignParentTop="true"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="OJ:"
            android:textColor="@color/colorblack"
            android:gravity="center_vertical"
            android:id="@+id/textView" />
        <TextView
            android:id="@+id/ojgame_ojname"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="ojname"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/ojgame_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="name"
            android:textSize="18sp"
            android:textColor="@color/colorblack"
            android:gravity="center"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:lines="1"
            />
        <TextView
            android:id="@+id/ojgame_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:padding="4dp"
            android:layout_alignTop="@+id/ojgame_week"
            android:layout_alignParentEnd="true" />
        <TextView
            android:id="@+id/ojgame_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="week"
            android:padding="4dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@mipmap/icpclogo"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>