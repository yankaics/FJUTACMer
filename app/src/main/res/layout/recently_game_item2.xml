<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:background="@drawable/backg_selector"
    >
    <WebView
        android:id="@+id/recently_game_ben_oj_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"

        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="权限:"
            android:gravity="center"
            android:textColor="@color/colorred"
            android:id="@+id/textView3" />
        <TextView
            android:id="@+id/recently_game_ben_oj_access"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="公开"
            android:padding="2dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="开始时间："
            android:layout_alignParentTop="true"
            android:textColor="@color/colorgreen"
            android:layout_toStartOf="@+id/recently_game_ben_oj_begin" />
        <TextView
            android:id="@+id/recently_game_ben_oj_begin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2016-10-1"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
             />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="类型:"
            android:gravity="center"
            android:textColor="@color/colorDarkBlue"
            android:id="@+id/textView6" />
        <TextView
            android:id="@+id/recently_game_ben_oj_kind"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="正式"
            android:padding="2dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView6" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="结束时间："
            android:textColor="@color/colorgreen"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/recently_game_ben_oj_end" />
        <TextView
            android:id="@+id/recently_game_ben_oj_end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2016-10-1"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorgray"
        />
</LinearLayout>